{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "instructions": [
    "~/.config/opencode/AGENTS.md"
  ],
  "model": "openai/gpt-5.2-codex",
  "small_model": "openai/gpt-5.1-codex-mini",
  "plugin": [
    "@mohak34/opencode-notifier@latest"
  ],
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "codex",
        "--project",
        "$(pwd)"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_MCP_PAT_TOKEN}"
      },
      "enabled": true,
      "timeout": 60000
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "notion": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.notion.com/mcp"
      ],
      "enabled": true,
      "timeout": 60000
    }
  }
}
