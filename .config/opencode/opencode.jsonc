{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "openai/gpt-5.2-codex",
  "small_model": "openai/gpt-5.1-codex-mini",
  "enabled_providers": [
    "openai"
  ],
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_MCP_PAT_TOKEN}"
      },
      "enabled": true,
      "timeout": 60000
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "notion": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.notion.com/mcp"
      ],
      "enabled": true,
      "timeout": 60000
    }
  }
}
