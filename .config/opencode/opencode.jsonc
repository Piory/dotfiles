{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "instructions": [
    "~/.config/opencode/AGENTS.md"
  ],
  "model": "openai/gpt-5.2-codex",
  "small_model": "openai/gpt-5.1-codex-mini",
  "plugin": [
    "@mohak34/opencode-notifier@latest"
  ],
  "permission": {
    "bash": {
      "*": "allow",
      "rm -rf *": "deny",
      "git push --force*": "deny",
      "sudo *": "deny"
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "high",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "mcp": {
    "Serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "codex",
        "--project",
        "$(pwd)"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "GitHub": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_MCP_PAT_TOKEN}"
      },
      "enabled": true,
      "timeout": 60000
    },
    "Context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "Playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "Notion": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.notion.com/mcp"
      ],
      "enabled": true,
      "timeout": 60000
    },
    "Vercel": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.vercel.com"
      ],
      "enabled": true,
      "timeout": 60000
    }
  }
}
